@model Commons.Models.Product

<form method="post" asp-action="Delete" class="text-center">
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">Are you sure delete product?</h2>
            <span>@Model.Name</span>
            <hr/>
        </div>
        
        <button type="submit" class="btn btn-warning" style="width: 150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to List
        </a>
    </div>
</form>