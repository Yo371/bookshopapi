@model Commons.Models.User

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create User</h2>
            <hr/>
        </div>
        <div class="md-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="Auth.Role"></label>
            <input asp-for="Auth.Role" class="form-control">
            <span asp-validation-for="Auth.Role" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="Login"></label>
            <input asp-for="Login" class="form-control">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br/>
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width: 150px">
                Back to List
            </a>
        }

    </div>
</form>